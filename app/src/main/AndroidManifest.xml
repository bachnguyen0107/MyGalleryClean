<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.midterm">

    <!-- Permission to read photos from external storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="My Gallery"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyGallery">

        <!-- Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- must be true for launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Fullscreen viewer (not exported) -->
        <activity
            android:name=".FullScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.MyGallery.NoActionBar" />

        <!-- later add login/register pages -->
<!--        <activity-->
<!--            android:name=".LoginActivity"-->
<!--            android:exported="false" />-->
<!--        <activity-->
<!--            android:name=".RegisterActivity"-->
<!--            android:exported="false" />-->

    </application>
</manifest>
