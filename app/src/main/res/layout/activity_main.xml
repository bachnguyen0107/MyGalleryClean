<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <!-- Album Selector -->
    <LinearLayout
        android:id="@+id/albumHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Rename Album Button -->
        <ImageButton
            android:id="@+id/btnRenameAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rename Album"
            android:padding="4dp"
            android:src="@drawable/ic_edit"
            app:tint="@color/black" />

        <!-- ðŸ†• Delete Album Button -->
        <ImageButton
            android:id="@+id/btnDeleteAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Album"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/black" />

        <!-- Album Spinner -->
        <Spinner
            android:id="@+id/albumSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:spinnerMode="dropdown" />

        <!-- View Toggle Button -->
        <ImageButton
            android:id="@+id/btnToggleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle View"
            android:padding="4dp"
            android:src="@drawable/ic_grid_view"
            app:tint="@color/black"
            android:layout_marginEnd="8dp" />

        <!-- Search Button -->
        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Search Photos"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="@color/black" />
    </LinearLayout>

    <!-- Search Results Header -->
    <LinearLayout
        android:id="@+id/searchHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSearchResults"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search Results"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Search"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

    <!-- RecyclerView for Photos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPhotos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_image" />

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <!-- Primary Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSlideshow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Slideshow"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_slideshow"
                app:iconTint="@android:color/white"
                app:backgroundTint="@color/purple_500"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddPhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Photo"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_add_photo"
                app:iconTint="@android:color/white"
                app:backgroundTint="@color/purple_500"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Create Album FAB -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="Create Album"
                app:tint="@android:color/white"
                app:backgroundTint="@color/purple_500" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
